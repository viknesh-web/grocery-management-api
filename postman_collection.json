		{
			"name": "Products",
			"item": [
				{
					"name": "List Products",
					"request": {
						"method": "GET",
						"header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
						"url": {
							"raw": "{{base_url}}/products?per_page=15&search=&category_id=&product_type=&status=&has_discount=&stock_status=&sort_by=created_at&sort_order=desc",
							"host": ["{{base_url}}"],
							"path": ["products"],
							"query": [
								{"key": "per_page", "value": "15"},
								{"key": "search", "value": "", "description": "Search by name or item code"},
								{"key": "category_id", "value": "", "description": "Filter by category ID"},
								{"key": "product_type", "value": "", "description": "Filter: daily, standard"},
								{"key": "status", "value": "", "description": "Filter: enabled, disabled"},
								{"key": "has_discount", "value": "", "description": "Filter products with/without discount: true, false"},
								{"key": "stock_status", "value": "", "description": "Filter: in_stock, low_stock, out_of_stock"},
								{"key": "sort_by", "value": "created_at", "description": "Sort: name, original_price, selling_price, stock_quantity, created_at, product_type"},
								{"key": "sort_order", "value": "desc", "description": "Order: asc, desc"}
							]
						}
					}
				},
				{
					"name": "Create Product",
					"request": {
						"method": "POST",
						"header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
						"body": {
							"mode": "formdata",
							"formdata": [
								{"key": "category_id", "value": "1", "type": "text"},
								{"key": "name", "value": "Test Product", "type": "text"},
								{"key": "item_code", "value": "TEST-001", "type": "text"},
								{"key": "original_price", "value": "100.00", "type": "text"},
								{"key": "discount_type", "value": "percentage", "type": "text"},
								{"key": "discount_value", "value": "10", "type": "text"},
								{"key": "stock_quantity", "value": "50", "type": "text"},
								{"key": "stock_unit", "value": "kg", "type": "text"},
								{"key": "product_type", "value": "daily", "type": "text"},
								{"key": "image", "type": "file", "src": []}
							]
						},
						"url": {
							"raw": "{{base_url}}/products",
							"host": ["{{base_url}}"],
							"path": ["products"]
						}
					}
				},
				{
					"name": "Get Product",
					"request": {
						"method": "GET",
						"header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
						"url": {
							"raw": "{{base_url}}/products/1",
							"host": ["{{base_url}}"],
							"path": ["products", "1"]
						}
					}
				},
				{
					"name": "Update Product",
					"request": {
						"method": "PUT",
						"header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"name\": \"Updated Product Name\",\n    \"original_price\": 120.00\n}"
						},
						"url": {
							"raw": "{{base_url}}/products/1",
							"host": ["{{base_url}}"],
							"path": ["products", "1"]
						}
					}
				},
				{
					"name": "Delete Product",
					"request": {
						"method": "DELETE",
						"header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
						"url": {
							"raw": "{{base_url}}/products/1",
							"host": ["{{base_url}}"],
							"path": ["products", "1"]
						}
					}
				},
				{
					"name": "Toggle Product Status",
					"request": {
						"method": "POST",
						"header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
						"url": {
							"raw": "{{base_url}}/products/1/toggle-status",
							"host": ["{{base_url}}"],
							"path": ["products", "1", "toggle-status"]
						}
					}
				}
			]
		},
